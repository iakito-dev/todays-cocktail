{
  "frontend/src/**/*.{js,jsx,ts,tsx}": [
    "frontend/node_modules/.bin/eslint --config frontend/eslint.config.js --fix --max-warnings=0 --no-error-on-unmatched-pattern",
    "frontend/node_modules/.bin/prettier --write"
  ],

  "frontend/src/**/*.css": ["frontend/node_modules/.bin/prettier --write"],

  "backend/**/*.rb": ["backend/bin/lint-staged-rubocop"],

  "*.{json,md,yml,yaml}": ["frontend/node_modules/.bin/prettier --write"]
}
